{
  "compilerOptions": {
    "outDir": "lib",

    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,

    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "edmtp-modules",
    "lib",
    "test-server"
  ]
}