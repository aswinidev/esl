{
  "compilerOptions": {
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "target": "ES5",
    "module": "commonjs",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ES5",
      "ES6"
    ],
    "baseUrl": "src/",
    "paths": {
      "@helpers/*": ["helpers/*"],
      "@components/*": ["components/*"],
      "@polyfills/*": ["polyfills/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "edmtp-modules",
    "test-server"
  ]
}