{
  "compilerOptions": {
    "outDir": "lib",
    "experimentalDecorators": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "removeComments": true,
    "target": "es5",
    "module": "es6",
    "sourceMap": true,
    "declaration": true,
    "lib": [
      "dom",
      "es6",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "paths": {
      "@helpers/*": ["src/helpers/*"],
      "@components/*": ["src/components/*"],
      "@polyfills/*": ["src/polyfills/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "edmtp-modules",
    "lib",
    "lib-es6",
    "test-server"
  ]
}