{
  "watch": {
    "ts": ["../src/modules/**/*.ts", "src/**/*.ts", "!**/test/*.ts"],
    "less": ["../src/modules/**/*.less", "src/**/*.less"]
  },
  "server": {
    "less": "src/*.less",
    "ts": ["src/*.ts"],
    "target": "static/bundles",
    "config": {
      "port": 3002,
      "serverRoot": "./",
      "public": ["static/"],
      "jscssDestFolders": ["static/bundles/*.css", "static/bundles/*.js"]
    }
  }
}
