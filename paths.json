{
  "bundle": {
    "less": "src/bundles/all.less",
    "lessComponents": "src/components/*/*.less",
    "ts": "src/bundles/all.ts",
    "tsComponents": "src/components/*/*.ts",
    "context": "src/components",
    "target": "lib"
  },
  "polyfills": {
    "ts": [
      "src/bundles/polyfill-light.ts",
      "src/bundles/polyfill-full.ts"
    ],
    "context": "src/polyfills",
    "target": "lib"
  },
  "watch": {
    "ts": ["src/components/**/*.ts", "src/helpers/**/*.ts"],
    "less": ["src/components/**/*.less", "src/helpers/**/*.less"],
    "local": {
      "ts": "test-server/local-build/**/*.ts",
      "less": "test-server/local-build/**/*.less"
    }
  },
  "test": {
    "less": "test-server/local-build/*.less",
    "ts": [
      "test-server/local-build/*.ts"
    ],
    "target": "test-server/static"
  }
}