{
  "src": {
    "ts": ["components/**/*.ts", "!components/**/*.test.ts"],
    "css": ["components/**/*.default.less"],
    "less": ["components/**/*.less", "!components/**/*.default.less"]
  },
  "lint": {
    "ts": ["components/**/*.ts", "!components/**/*.test.ts"],
    "less": ["components/**/*.less"]
  },
  "watch": {
    "ts": ["components/**/*.ts", "test-server/src/**/*.ts"],
    "less": ["components/**/*.less", "test-server/src/**/*.less"]
  },
  "test": {
    "less": "test-server/src/*.less",
    "ts": ["test-server/src/*.ts"],
    "target": "test-server/static"
  }
}
