{
  "src": {
    "base": "./src/modules/",
    "ts": ["src/modules/**/*.ts", "!**/test/*.ts"],
    "less": ["src/modules/**/*.less"],
    "css": ["src/modules/*.less", "src/modules/*/*.less", "src/modules/utils/*/*.less", "src/modules/beta/*/*.less", "!**/*.mixin.less"],
    "dest": "modules",
    "destPaths": ["modules/*"]
  },
  "polyfills": {
    "base": "./src/polyfills/",
    "ts": ["src/polyfills/**/*.ts"],
    "dest": "polyfills",
    "destPaths": ["polyfills/*"]
  },
  "lint": {
    "ts": ["src/modules/**/*.ts", "!**/test/*.test.ts", "!**/*.test.ts"],
    "less": ["src/modules/**/*.less"]
  }
}
