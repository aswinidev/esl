{
  "bundle": {
    "less": "components/all.less",
    "lessComponents": ["components/*/*.less", "!components/*/*.default.less"],
    "lessComponentsDefaults": "components/*/*.default.less",
    "ts": "components/all.ts",
    "tsComponents": ["components/*/*.ts", "!components/esl-base-element/*.ts"],
    "context": "components",
    "target": "lib"
  },
  "watch": {
    "ts": ["components/**/*.ts"],
    "less": ["components/**/*.less"],
    "local": {
      "ts": "test-server/src/**/*.ts",
      "less": "test-server/src/**/*.less"
    }
  },
  "test": {
    "less": "test-server/src/*.less",
    "ts": ["test-server/src/*.ts"],
    "target": "test-server/static"
  }
}