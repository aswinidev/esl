{
  "src": {
    "ts": ["modules/**/*.ts", "!modules/**/*.test.ts"],
    "less": ["modules/*/all.less", "modules/all.less"]
  },
  "lint": {
    "ts": ["modules/**/*.ts", "!modules/**/*.test.ts"],
    "less": ["modules/**/*.less"]
  },
  "watch": {
    "ts": ["modules/**/*.ts", "test-server/src/**/*.ts"],
    "less": ["modules/**/*.less", "test-server/src/**/*.less"]
  },
  "server": {
    "less": "test-server/src/*.less",
    "ts": ["test-server/src/*.ts"],
    "target": "test-server/static"
  }
}
