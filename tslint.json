{
  "defaultSeverity": "warning",
  "env": {
    "browser": true
  },
  "extends": [
    "tslint:recommended",
    "tslint-eslint-rules"
  ],
  "rules": {
    "curly": [
      true,
      "ignore-same-line"
    ],
    "quotemark": [
      true,
      "single"
    ],
    "max-line-length": [
      true,
      200
    ],
    "no-console": false,
    "adjacent-overload-signatures": true,
    "trailing-comma": false,
    "new-parens": true,
    "no-arg": true,
    "no-eval": false,
    "no-bitwise": true,
    "no-conditional-assignment": true,
    "no-consecutive-blank-lines": false,
    "indent": false,
    "variable-name": false,
    "semicolon": false,
    "no-unused-expression": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "prefer-for-of": false,
    "max-classes-per-file": [
      true,
      3
    ],
    "interface-name": false,
    "member-ordering": false,
    "only-arrow-functions": false,
    "space-before-function-paren": [
      true,
      {
        "anonymous": "always",
        "named": "never",
        "asyncArrow": "always"
      }
    ]
  },
  "linterOptions": {
    "exclude": [
      "node_modules",
      "*.js"
    ]
  }
}