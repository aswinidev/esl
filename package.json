{
  "name": "@exadel/esl",
  "description": "Exadel Smart Library (ESL) - is the lightweight custom elements library that provide a set of super-flexible components",
  "keywords": [
    "custom elements",
    "typescript",
    "component library",
    "lightweight",
    "flexible"
  ],
  "version": "1.1.0",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exadel-inc/esl.git"
  },
  "module": "modules/all.js",
  "sideEffects": [
    "modules/lib.js",
    "src/modules/lib.ts",
    "modules/esl-media/providers/**/*.js",
    "src/modules/esl-media/providers/**/*.ts",
    "modules/draft/esl-carousel/core/view/*.js",
    "src/modules/draft/esl-carousel/core/view/*.ts",
    "polyfills/**/*.js",
    "src/polyfills/**/*.ts"
  ],
  "types": "modules/all.d.ts",
  "contributors": [
    "Alexey Stsefanovich <astsefanovich@exadel.com>",
    "Julia Murashko <ymurashka@exadel.com>",
    "Yuliya Adamskaya <yadamska@exadel.com>"
  ],
  "browserslist": [
    "last 3 versions",
    "> 1%",
    "not dead"
  ],
  "scripts": {
    "start": "cd pages && npm run dev",
    "clean": "gulp clean",
    "build": "gulp build",
    "build:pages": "cd pages && npm run build-pages",
    "test": "concurrently \"npm run lint\" \"npm run test:unit\"",
    "test:unit": "jest --silent --noStackTrace",
    "test:report": "jest --coverage",
    "lint": "concurrently \"npm run lint:js\" \"npm run lint:css\" && node build/catlog.js \"Linting passed\"",
    "lint:js": "eslint src/**/*.ts",
    "lint:css": "stylelint src/**/*.less",
    "prepare": "husky install && npm run build",
    "preversion": "npm test"
  },
  "dependencies": {
    "@types/resize-observer-browser": "0.1.5",
    "@types/video.js": "7.3.15",
    "@types/youtube": "0.0.42"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@exadel/server-sketch": "git+https://github.com/exadel-inc/server-sketch.git",
    "@juggle/resize-observer": "^3.3.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/jest": "^26.0.21",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "@webcomponents/custom-elements": "^1.4.3",
    "@webcomponents/webcomponents-platform": "^1.0.1",
    "autoprefixer": "^10.2.5",
    "axios": "^0.21.1",
    "browser-sync": "^2.26.14",
    "concurrently": "^6.0.0",
    "cpx": "^1.5.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.22.0",
    "eslint-plugin-import": "^2.22.1",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-eslint": "^6.0.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^5.1.3",
    "intersection-observer": "^0.12.0",
    "jest": "^26.6.3",
    "postcss": "^8.2.8",
    "promise-polyfill": "^8.2.0",
    "semantic-release": "^17.4.2",
    "smoothscroll-polyfill": "^0.4.4",
    "stylelint": "^13.12.0",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "typescript": "4.2.3",
    "webpack": "^5.26.3"
  }
}
