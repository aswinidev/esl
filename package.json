{
  "name": "@exadel/esl",
  "description": "Exadel Smart Library (ESL) - is the lightweight custom elements library that provide a set of super-flexible components",
  "keywords": [
    "custom elements",
    "typescript",
    "component library",
    "lightweight",
    "flexible"
  ],
  "version": "2.0.0-beta.9",
  "private": true,
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exadel-inc/esl.git"
  },
  "module": "modules/all.js",
  "sideEffects": [
    "modules/lib.js",
    "src/modules/lib.ts",
    "modules/esl-media/providers/**/*.js",
    "src/modules/esl-media/providers/**/*.ts",
    "modules/draft/esl-carousel/core/view/*.js",
    "src/modules/draft/esl-carousel/core/view/*.ts",
    "polyfills/**/*.js",
    "src/polyfills/**/*.ts"
  ],
  "types": "modules/all.d.ts",
  "contributors": [
    "Alexey Stsefanovich <astsefanovich@exadel.com>",
    "Julia Murashko <ymurashka@exadel.com>",
    "Yuliya Adamskaya <yadamska@exadel.com>"
  ],
  "browserslist": [
    "last 3 versions",
    "> 1%",
    "not dead"
  ],
  "scripts": {
    "start": "cd test-server && npm run dev",
    "clean": "gulp clean",
    "build": "gulp build",
    "test": "concurrently \"gulp lint --silent\" \"jest --silent --noStackTrace\"",
    "test:report": "jest --coverage",
    "prepare": "npm run build",
    "preversion": "npm test"
  },
  "dependencies": {
    "@types/resize-observer-browser": "0.1.5",
    "@types/video.js": "7.3.11",
    "@types/youtube": "0.0.41"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@exadel/server-sketch": "git+https://github.com/exadel-inc/server-sketch.git",
    "@juggle/resize-observer": "^3.2.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.2.0",
    "@semantic-release/npm": "^7.0.10",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/jest": "^26.0.20",
    "@types/smoothscroll-polyfill": "^0.3.1",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "@webcomponents/custom-elements": "^1.4.3",
    "@webcomponents/webcomponents-platform": "^1.0.1",
    "autoprefixer": "^10.2.4",
    "browser-sync": "^2.26.14",
    "concurrently": "^5.3.0",
    "cssnano": "^4.1.10",
    "eslint": "^7.19.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-eslint": "^6.0.0",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^9.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylelint": "^13.0.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^4.3.8",
    "intersection-observer": "^0.12.0",
    "jest": "^26.6.3",
    "postcss": "^8.2.4",
    "promise-polyfill": "^8.2.0",
    "semantic-release": "^17.3.7",
    "smoothscroll-polyfill": "^0.4.4",
    "stylelint": "^13.9.0",
    "ts-jest": "^26.5.0",
    "ts-loader": "^8.0.14",
    "typescript": "4.1.3",
    "webpack": "^5.19.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
