{
  "name": "exadel-smart-library",
  "description": "Exadel Smart Library (ESL) - is the lightweight custom elements library that provide a set of super-flexible components",
  "keywords": [
    "custom elements",
    "component library"
  ],
  "version": "1.29.0-alpha",
  "private": true,
  "homepage": "https://gitlab.exadel.com/EDMTP/smart-wc-library#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://gitlab.exadel.com/EDMTP/smart-wc-library.git"
  },
  "contributors": [
    "Alexey Stsefanovich <astsefanovich@exadel.com>",
    "Julia Murashko <ymurashka@exadel.com>",
    "Yuliya Adamskaya <yadamska@exadel.com>"
  ],
  "scripts": {
    "tar": "gulp tar",
    "build": "gulp build",
    "test": "jest && gulp lint",
    "test-only": "jest",
    "test-report": "jest --coverage",
    "test-ci": "gulp lint --silent && jest --bail --silent",
    "local-serv": "npm run local-serv-build && npm run local-serv-start",
    "local-serv-start": "cd test-server && node server.js",
    "local-serv-build": "gulp buildLocal",
    "local-serv-watch": "npm run local-serv | gulp watchLocal",
    "prepare": "npm run build",
    "preversion": "npm run test | npm run test-lint"
  },
  "files": [
    "modules/**/*",
    "!modules/**/*.test.ts",
    "modules-es6/**/*"
  ],
  "browserslist": [
    "last 3 version",
    "> 1%",
    "not dead"
  ],
  "dependencies": {
    "@types/video.js": "7.3.10",
    "@types/youtube": "0.0.39"
  },
  "devDependencies": {
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.5.0",
    "@typescript-eslint/parser": "^4.5.0",
    "@webcomponents/custom-elements": "^1.4.3",
    "@webcomponents/webcomponents-platform": "^1.0.1",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "eslint": "^7.11.0",
    "gulp": "^4.0.2",
    "gulp-clean": "^0.4.0",
    "gulp-eslint": "^6.0.0",
    "gulp-exclude-gitignore": "^1.2.0",
    "gulp-gzip": "^1.4.2",
    "gulp-less": "^4.0.1",
    "gulp-postcss": "^9.0.0",
    "gulp-print": "^5.0.2",
    "gulp-sourcemaps": "^2.6.5",
    "gulp-stylelint": "^13.0.0",
    "gulp-tar": "^3.1.0",
    "gulp-typescript": "^5.0.1",
    "husky": "^4.3.0",
    "intersection-observer": "^0.11.0",
    "jest": "^26.6.0",
    "postcss": "^8.1.2",
    "promise-polyfill": "^8.1.3",
    "smoothscroll-polyfill": "^0.4.4",
    "stylelint": "^13.7.2",
    "ts-jest": "^26.4.1",
    "ts-loader": "^8.0.6",
    "typescript": "^4.0.3",
    "ui-project-server": "./test-server/edmtp-modules/ui-project-server.tar",
    "vinyl-named": "^1.1.0",
    "webpack": "^4.44.2",
    "webpack-stream": "^6.1.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test-ci"
    }
  }
